<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="현재 동국대학교 날씨"
        android:textColor="#FF5722"
        android:textSize="35sp"></TextView>

    <TextView
        android:layout_marginTop="20sp"
        android:id="@+id/txtNowTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기온 : "
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#000000"
        ></TextView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        app:srcCompat="@drawable/sunny" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMise"
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="미세먼지 : "
            android:textSize="20sp"
            android:layout_weight="1"
            ></TextView>

        <TextView
            android:id="@+id/txtChomise"
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="초미세먼지 : "
            android:textSize="20sp"
            android:layout_weight="1"
            ></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSun"
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자외선지수 : "
            android:textSize="20sp"
            android:layout_weight="1"
            ></TextView>

        <TextView
            android:id="@+id/txtRain"
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="강수 확률 : "
            android:textSize="20sp"
            android:layout_weight="1"
            ></TextView>


    </LinearLayout>

    <View
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#FF5722"></View>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9시 "
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#000000"
            ></TextView>

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="20sp"
            android:layout_weight="3"
            android:textColor="#000000"
            ></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12시 "
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#000000"
            ></TextView>

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17"
            android:textSize="20sp"
            android:layout_weight="3"
            android:textColor="#000000"
            ></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15시 "
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#000000"
            ></TextView>

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16"
            android:textSize="20sp"
            android:layout_weight="3"
            android:textColor="#000000"
            ></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18시 "
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#000000"
            ></TextView>

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="20sp"
            android:layout_weight="3"
            android:textColor="#000000"
            ></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21시 "
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#000000"
            ></TextView>

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="20sp"
            android:layout_weight="3"
            android:textColor="#000000"
            ></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24시 "
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#000000"
            ></TextView>

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20sp"
            android:layout_weight="3"
            android:textColor="#000000"
            ></TextView>


    </LinearLayout>


</LinearLayout>